- var path = document.location.pathname

#teacher-dashboard-nav
  nav.navbar
    .container-fluid.container
      .navbar-header
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#teacher-dashboard-nav-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        span.navbar-brand.text-h4(data-i18n='teacher.teacher_dashboard')
      #teacher-dashboard-nav-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav
          // NOTE: Update Close.io email templates if these labels are changed!
          if me.isSchoolAdmin()
            li(class= path.indexOf('/school-administrator') === 0 ? 'active' : '')
              a(href='/school-administrator')
                small.label(data-i18n='school_administrator.my_teachers')
          li(class= path.indexOf('/teachers/classes') === 0 ? 'active' : '')
            a.track-click-event(href='/teachers/classes', data-event-action='Teacher Nav Click My Classes')
              small.label(data-i18n='teacher.my_classes')
          li(class= path.indexOf('/teachers/courses') === 0 ? 'active' : '')
            a.track-click-event(href='/teachers/courses', data-event-action='Teacher Nav Click Unit Guides')
              small.label(data-i18n='teacher.courses')
          if me.canManageLicensesViaUI()
            li(class= path.indexOf('/teachers/licenses') === 0 ? 'active' : '')
              a.track-click-event(href='/teachers/licenses', data-event-action='Teacher Nav Click Student Licenses')
                small.label(data-i18n='teacher.enrollments')
          li(class= path.indexOf('/teachers/resources') === 0 && path.indexOf('/teachers/resources/faq') !== 0 ? 'active' : '')
            a.track-click-event(href='/teachers/resources', data-event-action='Teacher Nav Click Resource Hub')
              small.label(data-i18n='teacher.resource_hub')
          li(class= path.indexOf('/teachers/resources/faq') === 0 ? 'active' : '')
            - var faqURL = "/teachers/resources/faq";
            - if (me.get('preferredLanguage') == 'nl-NL' || me.get('preferredLanguage') == 'nl-BE')
            -     faqURL = "/teachers/resources/faq-nl-NL";
            - if (me.get('preferredLanguage') == 'he')
            -     faqURL = "/teachers/resources/faq-HE";
            - if (me.get('preferredLanguage') == 'pt-BR' || me.get('preferredLanguage') == 'pt-PT')
            -     faqURL = "/teachers/resources/faq-pt-BR";
            - if (me.get('preferredLanguage') == 'zh-HANS' || me.get('preferredLanguage') == 'zh-HANT')
            -     faqURL = "/teachers/resources/faq-zh-HANS";
            a.track-click-event(href=faqURL, data-event-action='Teacher Nav Click Educator FAQ')
              small.label(data-i18n='teacher.educator_faq')
