extends /templates/base

block content
  div
    ol.breadcrumb
      li
        a(href="/editor", data-i18n="editor.main_title") CodeCombat Editors
      li
        a(href="/editor/concept", data-i18n="editor.concept_title")
      li.active
        | #{view.concept.get('name')}

  - var authorized = !me.get('anonymous');
  button.concept-tool-button(data-i18n="editor.pop_i18n", disabled=authorized === true ? undefined : "true").btn.btn-primary#i18n-button
  button.concept-tool-button(data-i18n="common.save", disabled=authorized === true ? undefined : "true").btn.btn-primary#save-button Save

  h3
    span(data-i18n="editor.concept_edit_title")
    |: #{view.concept.attributes.name}

  - if (!me.isAdmin())
    .alert.alert-warning Can only edit translations currently

  #concept-treema

  h3(data-i18n="resources.patches") Patches
  .patches-view

  hr
