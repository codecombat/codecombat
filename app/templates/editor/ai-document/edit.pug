extends /templates/base

block content
  div
    ol.breadcrumb
      li
        a(href="/editor", data-i18n="editor.main_title") CodeCombat Editors
      li
        a(href="/editor/ai-document", data-i18n="editor.ai_document_title")
      li.active
        | #{view.document.get('_id')}

  - var authorized = !me.get('anonymous');
  button.ai-document-tool-button.btn.btn-primary#i18n-button(data-i18n="editor.pop_i18n", disabled=authorized === true ? undefined : "true")
  button.ai-document-tool-button.btn.btn-primary#delete-button(data-i18n="editor.delete", disabled=me.isAdmin() === true ? undefined : "true")
  button.ai-document-tool-button.btn.btn-primary#save-button(data-i18n="common.save", disabled=authorized === true ? undefined : "true")

  h3
    span(data-i18n="editor.ai_document_edit_title")
    |: #{view.document.attributes._id}
    
  #ai-document-treema

  hr

  // TODO: visualize the document here
