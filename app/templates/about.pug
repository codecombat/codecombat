                .job-listing
                  h5= job.text.replace(/ \(Remote\)$/i, '')
                    .text-center
                      small.label
                        span= location || 'Remote'
                        if commitment
                          span  • #{commitment}
                    .job-description
                      for paragraph in (job.descriptionPlain || '').split('\n\n')
