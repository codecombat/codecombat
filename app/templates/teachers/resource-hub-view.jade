          p(data-i18n="teacher.engineering_cycle_worksheet_desc")
        li
          a(href="/teachers/resources/pair-programming")
            span(data-i18n="teacher.cs1_pairprogramming")
          p(data-i18n="teacher.cs1_pairprogramming_desc")

