mixin header(label, name)
  div.section-header.text-capitalize(role="button", id="#palette-header-" + _.string.slugify(label), data-panel="#palette-tab-" + _.string.slugify(label))
    span= name
div.container
  div.left.nano
    div.nano-content.panel-group#spell-palette-api-bar
      if entryGroups
        each entries, group in entryGroups
          +header(group, group)
          div.apis.panel-collapse(id="palette-tab-" + _.string.slugify(group))
            div(class="properties properties-" + _.string.slugify(group))


  div.right
    if isIE
      .scrollArea.always-scroll-y
        .scrollableArea
          .rightContentTarget.content
    else
      .scrollArea
        .scrollableArea
          .rightContentTarget.content
div.code-bank-close-btn
  div.code-bank-arrow.code-bank-right-arrow
  span(data-i18n="play_level.command_bank")
  div.code-bank-arrow.code-bank-left-arrow.hide
